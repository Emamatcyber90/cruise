all: lib/libcruise-posix.a

DESTDIR =
srcdir = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
datarootdir = $(DESTDIR)@datarootdir@
includedir = $(DESTDIR)@includedir@
mandir = $(DESTDIR)@mandir@
sbindir = $(DESTDIR)@sbindir@
bindir = $(DESTDIR)@bindir@
libdir = $(DESTDIR)@libdir@
LDFLAGS = @LDFLAGS@
CC = @CC@
LD = @LD@

NUMA_LIBS = -lnuma


DISABLE_LDPRELOAD = @DISABLE_LDPRELOAD@
CRUISE_LOG_FORMAT = $(srcdir)/../cruise-log-format.h

ifndef DISABLE_LDPRELOAD
all: lib/libcruise.so 
endif

VPATH = $(srcdir)

CFLAGS = -DCRUISE_CONFIG_H=\"cruise-runtime-config.h\" -I . -I ../ -I $(srcdir) -I$(srcdir)/../ @CFLAGS@ @CPPFLAGS@ -D_LARGEFILE64_SOURCE 

CFLAGS_SHARED = -DCRUISE_CONFIG_H=\"cruise-runtime-config.h\" -I . -I$(srcdir) -I$(srcdir)/../ @CFLAGS@ @CPPFLAGS@ -D_LARGEFILE64_SOURCE -shared -fpic -DPIC -DCRUISE_PRELOAD

LIBS = @LIBBZ2@ $(NUMA_LIBS)

lib::
	@mkdir -p $@

HEADERS = \
  lib/cruise-stack.h \
  lib/cruise-fixed.h \
  lib/cruise-sysio.h \
  lib/cruise-stdio.h \
  lib/cruise-internal.h \
  lib/cruise.h

OBJS = \
  lib/lookup3.o \
  lib/lookup8.o \
  lib/cruise-stack.o \
  lib/cruise-fixed.o \
  lib/cruise-sysio.o \
  lib/cruise-stdio.o \
  lib/cruise.o

POBJS = \
  lib/lookup3.po \
  lib/lookup8.po \
  lib/cruise-stack.po \
  lib/cruise-fixed.po \
  lib/cruise-sysio.po \
  lib/cruise-stdio.po \
  lib/cruise.po

#lib/cruise-mpi-io.o: lib/cruise-mpi-io.c cruise.h cruise-dynamic.h $(CRUISE_LOG_FORMAT) | lib
#	$(CC) $(CFLAGS) -c $< -o $@

#lib/cruise-mpi-io.po: lib/cruise-mpi-io.c cruise.h cruise-dynamic.h $(CRUISE_LOG_FORMAT) | lib
#	$(CC) $(CFLAGS_SHARED) -c $< -o $@

#lib/cruise-mpi-init-finalize.o: lib/cruise-mpi-init-finalize.c cruise.h cruise-dynamic.h $(CRUISE_LOG_FORMAT) | lib
#	$(CC) $(CFLAGS) -c $< -o $@

#lib/cruise-mpi-init-finalize.po: lib/cruise-mpi-init-finalize.c cruise.h cruise-dynamic.h $(CRUISE_LOG_FORMAT) | lib
#	$(CC) $(CFLAGS_SHARED) -c $< -o $@

lib/cruise-fixed.o: lib/cruise-fixed.c $(HEADERS)
	$(CC) $(CFLAGS) -c $< -o $@

lib/cruise-fixed.po: lib/cruise-fixed.c $(HEADERS)
	$(CC) $(CFLAGS_SHARED) -c $< -o $@


lib/cruise.o: lib/cruise.c $(HEADERS)
	$(CC) $(CFLAGS) -c lib/cruise.c -o $@

lib/cruise.po: lib/cruise.c $(HEADERS)
	$(CC) $(CFLAGS_SHARED) -c lib/cruise.c -o $@


lib/cruise-sysio.o: lib/cruise-sysio.c $(HEADERS)
	$(CC) $(CFLAGS) -c lib/cruise-sysio.c -o $@

lib/cruise-sysio.po: lib/cruise-sysio.c $(HEADERS)
	$(CC) $(CFLAGS_SHARED) -c lib/cruise-sysio.c -o $@


lib/cruise-stdio.o: lib/cruise-stdio.c $(HEADERS)
	$(CC) $(CFLAGS) -c lib/cruise-stdio.c -o $@

lib/cruise-stdio.po: lib/cruise-stdio.c $(HEADERS)
	$(CC) $(CFLAGS_SHARED) -c lib/cruise-stdio.c -o $@


lib/lookup3.o: lib/lookup3.c
	$(CC) $(CFLAGS) -c $< -o $@

lib/lookup3.po: lib/lookup3.c
	$(CC) $(CFLAGS_SHARED) -c $< -o $@


lib/lookup8.o: lib/lookup8.c
	$(CC) $(CFLAGS) -c $< -o $@

lib/lookup8.po: lib/lookup8.c
	$(CC) $(CFLAGS_SHARED) -c $< -o $@


lib/cruise-stack.o: lib/cruise-stack.c $(HEADERS)
	$(CC) $(CFLAGS) -c $< -o $@

lib/cruise-stack.po: lib/cruise-stack.c $(HEADERS)
	$(CC) $(CFLAGS_SHARED) -c $< -o $@


%.i: %.c
	$(CC) -E $(CFLAGS) -c $< -o $@

lib/libcruise-posix.a: $(OBJS)
	ar rcs $@ $^

lib/libcruise.so: $(POBJS)
	$(CC) $(CFLAGS_SHARED) $(LDFLAGS) -ldl -o $@ $^ -lpthread -lrt

install:: all
	install -d $(libdir)
	install -m 755 lib/libcruise-posix.a $(libdir)
#	install -m 755 lib/libcruise-mpi-io.a $(libdir)
ifndef DISABLE_LDPRELOAD
	install -m 755 lib/libcruise.so $(libdir)
endif
	install -d $(bindir)
	install -m 755 cruise-config $(bindir)

clean::
	rm -f *.o *.po *.a lib/*.o lib/*.po lib/*.a lib/*.so 

distclean:: clean
	rm -f cruise-runtime-config.h aclocal.m4 autom4te.cache/* config.status config.log Makefile 
	rm -rf autom4te.cache
